<drawer id="drawer">
  <vertical>
    <appbar>
      <toolbar id="toolbar" title="EniucsStudio测试版本"/>
      <tabs id="tabs"/>
    </appbar>
    <vertical w="auto" h="auto">
      <viewpager id="viewpager">
	<!-- 首页  -->
	<frame>
	  <vertical h="*" w="*">
	    <button h="200" text="点击启动!" textSize="40sp" layout_gravity="center" id="runAllBtn" style="Widget.AppCompat.Button.Colored"/>
	  </vertical>
	</frame>
        <!-- 功能管理 -->
        <frame>
          <scroll fillViewport="true">
            <vertical>
              <card w="*" h="50" margin="10 5" gravity="center_vertical">
                <horizontal paddingLeft="22" h="auto">
                  <text text="快手刷视频" textSize="16sp" gravity="center_vertical"/>
                  <Switch id="swBtn" marginLeft="210" layout_gravity="center_vertical"/>
                </horizontal>
                <View id="vw" bg="#f44336" h="*" w="10"/>
              </card>
              <card w="*" h="50" margin="10 5" gravity="center_vertical">
                <horizontal paddingLeft="22" h="auto">
                  <text text="抖音刷视频" textSize="16sp" />
                  <Switch id="swBtn2" marginLeft="210" gravity="center_vertical"/>
                </horizontal>
                <View id="vw2" bg="#f44336" h="*" w="10"/>
              </card>
            </vertical>
          </scroll>
        </frame>
        <!-- 功能参数 -->
        <frame>
	  <scroll fileViewport="true">
	    <!-- 快手 -->
	    <vertical margin="20">
	      <text textSize="22sp" text="快手极速版" color="#4caf50"/>
	      <!-- 刷视频时间 -->
	      <horizontal w="*" h="*">
		<text text="刷视频时间: " textSize="18sp" layout_gravity="center_vertical"/>
		<input tag="EditText" id="kWaiRunTimeInput" inputType="number" w="70" text="10"/>
		<text text="分钟" textSize="18sp" layout_gravity="center_vertical" w="auto"/>
	      </horizontal>
	      <!-- 飞行模式 -->
	      <horizontal w="*" h="*">
		<checkbox layout_gravity="left"  id="kWaiFlyModeBtn"/>
		<text text="飞行模式" textSize="18sp" layout_gravity="center_vertical"/>
	      </horizontal>
	      <!-- 快手签到 -->
	      <horizontal w="*" h="*">
		<checkbox layout_gravity="left"  id="kWaiSignInBtn" />
		<text text="签到" textSize="18sp" layout_gravity="center_vertical"/>
	      </horizontal>
	      <!-- 快手清理缓存 -->
	      <horizontal w="*" h="*">
		<checkbox layout_gravity="left"  id="kWaiCleanCacheBtn" layout_gravity="right"/>
		<text text="清理缓存" textSize="18sp" layout_gravity="center_vertical"/>
	      </horizontal>
	    </vertical>
	  </scroll>
        </frame>
      </viewpager>
    </vertical>
  </vertical>
  <vertical layout_gravity="left" bg="#ffffff" w="280">
    <list id="menu">
      <horizontal bg="?selectableItemBackagroud" w="*">
        <img w="50" h="50" padding="16" src="{{this.icon}}"
             tint="{{menu_color}}"/>
        <text textColor="{{menu_color}}" textSize="16sp" layout_gravity="center"
              text="{{this.text}}"/>
      </horizontal>
    </list>
  </vertical>
</drawer>
